<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/reminderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/everyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminderName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:text="Every"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginEnd="7dp"/>

        <TextView
            android:id="@+id/interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/everyText"
            android:layout_toEndOf="@id/everyText"
            android:text="30"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginEnd="3dp"/>

        <TextView
            android:id="@+id/intervalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/interval"
            android:layout_toEndOf="@id/interval"
            android:text="min from "
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/timeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/everyText"
            android:layout_toEndOf="@id/intervalType"
            android:text="10.00"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/toText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/everyText"
            android:layout_toEndOf="@id/timeStart"
            android:text="to"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/timeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/timeStart"
            android:layout_toEndOf="@id/toText"
            android:text="17.00"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/remSwitch"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/interval"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="186dp"
            android:layout_toEndOf="@id/intervalType"
            android:theme="@style/FlyttaTheme"
            />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/everyText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:text="MO"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginEnd="7dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>