<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#629FEF"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/stepCountButton"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="32dp"
        android:background="@drawable/main_button"
        android:drawableTop="@drawable/counter"
        android:gravity="center|bottom"
        android:onClick="goToReminderList"
        android:paddingBottom="10dp"
        android:text="Plan your Week"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/exerciseButton"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/main_button"
        android:drawableTop="@drawable/exercise"
        android:gravity="center|bottom"
        android:onClick="goToExercises"
        android:paddingBottom="10dp"
        android:text="Exercises"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepCountButton" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/main_button"
        android:drawableTop="@drawable/settings"
        android:gravity="center|bottom"
        android:onClick="goToLogout"
        android:paddingBottom="10dp"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyButton" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/main_button"
        android:drawableTop="@drawable/history"
        android:gravity="center|bottom"
        android:onClick="goToHistory"
        android:paddingBottom="10dp"
        android:text="History"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseButton" />


</androidx.constraintlayout.widget.ConstraintLayout>